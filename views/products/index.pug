extends ../layout/common

block content   
    .row
        each product in products
            .col-md-3
                .card(style='width: 18rem;')
                    img.card-img-top(src=product.image, alt='...')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                            
                        a.btn.btn-primary(href='#') Add to card

    
    ul.pagination
        li.page-item
            a.page-link(href='/products/?page=' + (page - 1)) Previous
        li.page-item
            a.page-link(href='/products/?page=' + (page - 1))= page > 0 ? page - 1 : 0
        li.page-item
            a.page-link(href='/products/?page=' + page)= page
        li.page-item
            a.page-link(href='/products/?page=' + (page + 1))= page + 1
        li.page-item
            a.page-link(href='/products/?page=' + (page + 1)) Next