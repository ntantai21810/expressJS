extends ../layout/common

block content  
    h1.mt-3
        span.mr-3 Users
        a(href="/users/create", class="btn btn-primary") New user

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET" class="d-flex") 
            input(type="text", name="name", value=name, class="form-control") 
            button(class="btn btn-primary ml-3") Search

    table.table
        tr 
            th Avatar
            th Name
            th Phone
            th Action

        each user in users
            tr
                td
                    img(src=user.avatar, width="64")
                td= user.name
                td= user.phone
                td
                    a(href="/users/" + user.id, class="btn btn-light") View